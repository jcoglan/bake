{ "name"            : "jstest"
, "description"     : "The cross-platform JavaScript test framework"
, "homepage"        : "http://jstest.jcoglan.com"
, "author"          : "James Coglan <jcoglan@gmail.com> (http://jcoglan.com/)"
, "keywords"        : ["testing"]
, "license"         : "MIT"

, "version"         : "1.0.2"
, "engines"         : {"node": ">=0.4.0"}
, "main"            : "./jstest"
, "bin"             : {"jstest": "./bin/jstest"}
, "preferGlobal"    : true
, "dependencies"    : { "nopt": "" }
, "devDependencies" : { "jsbuild": "1.0.1"
                      , "jsclass": "4.0.2"
                      , "wake": ""
                      , "split": ""
                      , "faye-websocket": ""
                      , "buster": ""
                      , "karma": ""
                      , "testem": ""
                      , "browserify": ""
                      , "testling": ""
                      }

, "scripts"         : { "build"     : "jsbuild -m node_modules/jsclass/src/loader.js -s JS.Test > lib/jstest.js && wake"
                      , "clean"     : "rm -rf build lib/jstest.js"
                      , "testling"  : "node example/testling.js | xargs cat | testling"
                      }

, "repository"      : { "type"  : "git"
                      , "url"   : "git://github.com/jcoglan/jstest.git"
                      }

, "bugs"            : "http://github.com/jcoglan/jstest/issues"

, "wake": {
    "javascript": {
      "sourceDirectory":  "lib",
      "targetDirectory":  "build",
      "builds": {
        "src": {"digest": false, "minify": false}
      },
      "targets": {
        "jstest": [       "jstest",
                          "reporters/_head",
                          "reporters/buster",
                          "reporters/karma",
                          "reporters/progress",
                          "reporters/spec",
                          "reporters/tapyj",
                          "reporters/teabag",
                          "reporters/testem",
                          "reporters/xml",
                          "reporters/_tail"
        ]
      }
    },
    "binary": {
      "sourceDirectory":  ".",
      "targetDirectory":  "build",
      "builds": {
        "src": {"digest": false}
      },
      "targets": {
        "package.json": "",
        "README.md": "",
        "bin/jstest": ""
  } } }

, "testling": {
    "scripts": [
      "build/jstest.js",
      "example/lib/set.js",
      "example/spec/set_spec.js",
      "example/testling.js"
    ],
    "browsers": {
      "chrome":           [25],
      "firefox":          [3.6, 19],
      "iexplore":         [6, 7, 8, 9, 10],
      "ipad":             [6.0],
      "iphone":           [6.0],
      "opera":            [10.5, 12.0],
      "safari":           [5.1, 6.0]
} } }

